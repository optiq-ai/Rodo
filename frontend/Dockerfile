FROM node:18-alpine

WORKDIR /app

# Kopiowanie plików package.json i package-lock.json
COPY package*.json ./

# Instalacja zależności
RUN npm install

# Kopiowanie reszty kodu źródłowego
COPY . .

# Ekspozycja portu 3000
EXPOSE 3000

# Uruchomienie aplikacji w trybie deweloperskim
CMD ["npm", "start"]
